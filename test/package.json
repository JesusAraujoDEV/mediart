{
    "name": "mediart-tests",
    "private": true,
    "type": "module",
    "scripts": {
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run",
        "test:coverage": "vitest run --coverage",
        "test:watch": "vitest --watch",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "type-check": "vue-tsc --noEmit",
        "prepare": "husky install",
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*.{js,ts,vue}": [
            "eslint --fix",
            "vitest run --reporter=verbose"
        ]
    },
    "devDependencies": {
        "@nuxt/test-utils": "^3.12.0",
        "@vitejs/plugin-vue": "^5.0.0",
        "@vitest/ui": "^2.1.9",
        "@vue/test-utils": "^2.4.4",
        "eslint": "^8.57.0",
        "husky": "^9.0.11",
        "jsdom": "^24.0.0",
        "lint-staged": "^15.2.2",
        "vitest": "^2.1.9",
        "vue-tsc": "^2.0.6"
    }
}